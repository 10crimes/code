IFILE=$1
roll=$2
yaw=$3
pitch=$4
PARAMS="-centralise -roll $roll -yaw $yaw -pitch $pitch"
OFILE="tmp.bmp"
INVFILE="tmp-inv.bmp"
echo ../gentestimg/simgen -overlay $PARAMS -image $IFILE $OFILE -size 0.7
../gentestimg/simgen -yoff 5 -overlay $PARAMS -image $IFILE $OFILE -size 0.7 > genres.txt
# gzip "$OFILE"
echo invert -i "$OFILE" -o "$INVFILE"
invert -i "$OFILE" -o "$INVFILE"
echo ./testsim "$INVFILE" "$OFILE"
rm recover.bmp
time ./testsim "$INVFILE" "$OFILE" > ppres.txt
