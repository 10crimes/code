IFILE=$1
roll=$2
yaw=$3
pitch=$4
OFILE="tmp.bmp"
INVFILE="tmp-inv.bmp"
PARAMS="-gnuplot -yoff 0.001 -centralise -roll $roll -yaw $yaw -pitch $pitch -overlay -image $IFILE $OFILE -size 0.7"
echo ../gentestimg/simgen $PARAMS 
../gentestimg/simgen $PARAMS > genres.txt
mv gplfit.ps gpl0fit.ps
# gzip "$OFILE"
echo invert -i "$OFILE" -o "$INVFILE"
invert -i "$OFILE" -o "$INVFILE"
echo ./testsim "$INVFILE" "$OFILE"
rm recover.bmp
time ./testsim "$INVFILE" "$OFILE" > ppres.txt
