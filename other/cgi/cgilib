fromcgi () {
sed '
s/+/ /g;
s/%40/@/g;
# Newlines:
s/%0D%0A/\
/g;s/%0D/\
/g;s/%0A/\
/g
'
}

getcgi() {
	TESTRES=`echo "$QUERY_STRING" | sed "s/.*\(^\|&\|'\)$1=\([^&']*\)\($\|&\|'\).*/\2/"`
	if test "$TESTRES" = "$QUERY_STRING"; then
		echo "cglib.getcgi(): Error finding var >$1<" > /dev/stderr
	else
		echo "$TESTRES" | fromcgi
	fi
}
