\font\UOS=/user/eevsspsr/ees1wc/tex/styles/UOS

\def\addressee{
  \begin{tabular}{l}
    \toname \\ 
    \toaddress\\[3em] 
    \circulate\\ 
    \enclosure
  \end{tabular}
}
\def\banner{
  \begin{tabular}{c}
    {\UOS A}\\
    {\Large University}\\
    {\Large of Surrey}\\[3em]
  {\raggedleft \par\@date\par}
  \end{tabular}
}

\def\thedirect{}
\def\exten#1{\def\theexten{#1}}
\def\directexten#1{\def\thedirect{#1}}
\def\telephonenum{
  \ifx\@empty\thedirect 300800 x \theexten \else 25\thedirect \fi
}
\def\emailname#1{\def\email{#1}}

