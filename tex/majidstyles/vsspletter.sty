\def\cc#1{
  \ifx\@empty#1\else
    \def\circulate{
      \par\noindent
      \parbox[t]{\textwidth}{
        \@hangfrom{\reset@font\rm \ccname: }%
        \ignorespaces #1\strut
      }\par
    }
  \fi
}
\def\circulate{}

\def\encl#1{
  \ifx\@empty#1\else
    \def\enclosure{
      \par\noindent
      \parbox[t]{\textwidth}{
        \@hangfrom{\reset@font\rm \enclname: }%
        \ignorespaces #1\strut
      }\par
    }
  \fi
}
\def\enclosure{}

\def\opening#1{
  \thispagestyle{firstpage} 
  \vspace*{40mm}
  \raisebox{-14mm}{\addressee} \hfill \banner  \par
  \vspace{10mm plus 40mm}%
  #1\par\vspace{3mm}\nobreak
}

\long\def\closing#1{\par\nobreak\vspace{\parskip}%
  \stopbreaks
  \noindent
  \hspace*{.1\textwidth}
  \parbox{\indentedwidth}{\raggedright
       \ignorespaces #1\\[6\medskipamount]%
       \ifx\@empty\fromsig
           \fromname
       \else \fromsig \fi\strut}%
   \par}

\def\ps@firstpage{
  \headheight 70mm \headsep -100mm 
  \footheight 35mm \footskip 40mm
  \def\@oddhead{}
  \def\@oddfoot{ \hfill \vsspaddress }
  \def\@evenhead{}\def\@evenfoot{}}



