if [ "$CHANNEL" = "#pug.up.admins" ]
then
        if [ "$1" = "help" ] || [ "$1" = "-h" ]
	then
            echo "$COLRED$COLBOLD .invite <nick> <trial/register>"
	exit
	fi

        if [ "$2" = "register" ]
        then
            echo "/msg Q chanlev #pug.up $1 +gv"
